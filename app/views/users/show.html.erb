				<%=  link_to "  |  Promote/Demote", edit_player_path(player) %>
				<%= link_to "  |  Drop", drop_player_path(player) %>
			<% end %>
			<% if player.retro && player.activate %>
				<%= "  |  Added #{player.retro.strftime("%B %d")}  |  Activate ON or AFTER #{player.activate.strftime("%B %d")}" %>
			<% end %>
		</p></li>
	<% end %>
</ul>

